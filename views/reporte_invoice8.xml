<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_invoice8">
       <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="page" style="font-size: 85%">
                          <!-- cliente -->
                          <div style="position: absolute; top: 3.7cm; left: 1cm; font-size: 110%; font-weight:bold; width: 2cm">
                            <span style="font-family: monospace!important" t-field="o.partner_id"/>
                          </div>

                          <!-- direccion -->
                          <div style="position: absolute; top: 4.0cm; left: 1cm; font-size: 110%; font-weight:bold; width: 3cm">
                            <span style="font-family: monospace!important" t-field="o.partner_id.street"/>, <span style="font-family: monospace!important" t-field="o.partner_id.street2"/>
                          </div>

                          <!-- Municipio -->
                          <div style="position: absolute; top: 4.3cm; left: 1cm; font-size: 110%; font-weight:bold; width: 3cm">
                              <t t-if="o.partner_id.city">
                                  <span style="font-family: monospace!important" t-field="o.partner_id.city"/>
                              </t>
                          </div>

                          <!-- Departamento -->
                          <div style="position: absolute; top: 4.3cm; left: 10cm; font-size: 110%; font-weight:bold; width: 3cm">
                              <t t-if="o.partner_id.state_id">
                                  <span style="font-family: monospace!important" t-field="o.partner_id.state_id.name"/>
                              </t>
                          </div>

                          <!-- No. RUC -->
                          <div style="position: absolute; top: 3.7cm; left: 15.0cm; font-size: 110%; font-weight:bold; width: 2cm">
                              <span style="font-family: monospace!important" t-field="o.partner_id.vat"/>
                          </div>

                          <!-- Fecha -->
                          <div style="position: absolute; top: 4.0cm; left: 15.0cm; font-size: 110%; font-weight:bold; width: 2cm">
                              <span style="font-family: monospace!important" t-field="o.invoice_date"/>
                          </div>

                          <!-- FORMA DE PAGO -->
                          <div style="position: absolute; top: 4.3cm; left: 15.0cm; font-size: 110%; font-weight:bold; width: 2cm">
                              <t t-if="o.invoice_payment_term_id">
                                  <span style="font-family: monospace!important" t-field="o.invoice_payment_term_id.name"/>
                              </t>
                          </div>


                          <t t-set="descuento" t-value="0"/>
                          <t t-set="subtotal_sin_descuento" t-value="0"/>
                          <div style="position: absolute; top: 8cm; left: 1cm">
                          <table>
                              <tbody>
                                  <tr t-foreach="o.invoice_line_ids" t-as="l">
                                      <td style="width: 1.6cm; font-size: 80%; font-weight:bold">
                                          <span t-field="l.quantity"/>
                                      </td>
                                      <td style="width: 12cm; font-size: 80%; font-weight:bold">
                                          <span t-esc="l.name"/>
                                      </td>
                                      <td style="width: 0.2m; font-size: 80%; font-weight:bold">

                                         </td>
                                      <!-- precio unitario sin umpuesto-->
                                      <td style="width: 1.9cm; font-size: 80%; font-weight:bold" class="text-right">
                                          <span t-esc="l.price_subtotal / l.quantity" t-options="{'widget': 'float', 'precision': 2}"/>
                                      </td>

                                      <!-- ventas gravadas -->
                                      <td style="width: 2cm; font-size: 80%; font-weight:bold" class="text-right">
                                          <span t-esc="l.price_subtotal" t-options="{'widget': 'float', 'precision': 2}"/>
                                          <t t-set="subtotal_sin_descuento" t-value="subtotal_sin_descuento + (l.price_unit / l.quantity)"/>
                                      </td>
                                      <t t-if="l.discount > 0">
                                          <t t-set="descuento" t-value="descuento + ((l.quantity*l.price_unit) -l.price_subtotal )"/>
                                      </t>
                                  </tr>
                              </tbody>
                          </table>
                        </div>

                        <!-- A LETRAS EL TOTAL -->
                        <P><div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 10.0cm; left: 2cm; font-weight:bold; width: 14cm">
                            <span t-esc="a_letras_dolares(o.amount_total)"/>
                        </div></P>


                        <!-- SUBTOTAL -->
                        <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 10.5cm; left: 15cm; font-weight:bold; width: 14cm">
                            <span t-esc="o.amount_untaxed_signed" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                        <!-- Descuento -->
                        <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 11cm; left: 15cm; font-weight:bold; width: 14cm">
                            <span t-esc="descuento" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                        <!-- Impuesto -->
                        <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 11.5cm; left: 15cm; font-weight:bold; width: 14cm">
                            <span t-field="o.amount_tax_signed" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                        <!-- Gran total -->
                        <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 12cm; left: 15cm; font-weight:bold; width: 14cm">
                            <span t-field="o.amount_total_signed" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
