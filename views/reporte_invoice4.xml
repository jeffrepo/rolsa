<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_invoice4">
       <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="page" style="font-size: 85%">



                      <!-- <t set="a" t-value="impuesto_impresos(o)"/> -->
                        <!-- nombre cliente -->
                        <div style="position: absolute; top: 4cm; left: 3cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <span style="font-family: monospace!important" t-field="o.partner_id.name"/>
                        <span t-esc="impuesto_impresos(o)"/>
                        </div>

                        <!-- direccion -->
                        <div style="position: absolute; top: 5cm; left: 3cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <span style="font-family: monospace!important" t-field="o.partner_id.street"/> <span style="font-family: monospace!important" t-field="o.partner_id.street2"/>
                        </div>

                        <!-- Municipio -->
                        <div style="position: absolute; top: 6cm; left: 3cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <span style="font-family: monospace!important" t-field="o.partner_id.city"/>
                        </div>

                        <!-- Departamento -->
                        <div style="position: absolute; top: 6cm; left: 6cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <span style="font-family: monospace!important" t-field="o.partner_id.state_id.name"/>
                        </div>

                        <!-- CCF  factura original de nota credito-->
                        <div style="position: absolute; top: 6.5cm; left: 3cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <!-- <span style="font-family: monospace!important" t-field="o.state_id.name"/> -->
                        <span style="font-family: monospace!important" t-field="o.ref"/>

                        </div>

                        <!-- NOTA REMISION -->
                        <div style="position: absolute; top: 7cm; left: 3cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <!-- <span style="font-family: monospace!important" t-field="o.state_id.name"/> -->
                        </div>


                        <!--FECHA  NOTA REMISION -->
                        <div style="position: absolute; top: 7cm; left: 6cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <!-- <span style="font-family: monospace!important" t-field="o.state_id.name"/> -->
                        </div>

                        <!-- fecha -->
                        <div style="position: absolute; top: 5cm; left: 20cm; font-size: 110%; font-weight:bold">
                            <span t-field="o.invoice_date"/>
                        </div>

                        <!-- registro no -->
                        <div style="position: absolute; top: 6cm; left: 20cm; font-size: 110%; font-weight:bold">
                            <span t-field="o.partner_id.dui"/>
                        </div>

                        <!-- NIT -->
                        <div style="position: absolute; top: 7cm; left: 20cm; font-size: 110%; font-weight:bold">
                            <span t-field="o.partner_id.vat"/>
                        </div>
                        <!-- giro -->
                        <div style="position: absolute; top: 8cm; left: 20cm; font-size: 110%; font-weight:bold">
                          <t t-if="o.partner_id.giro_negocio_id">
                              <span t-esc="o.partner_id.giro_negocio_id.name"/>
                          </t>                        </div>

                        <!-- forma de pago -->
                        <div style="position: absolute; top: 9cm; left: 20cm; font-size: 110%; font-weight:bold">
                            <!-- <span t-field="o.partner_id.vat"/> -->
                        </div>

                        <div style="position: absolute; top: 10.5cm; left: 1.5cm">
                        <table>
                            <tbody>
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td style="width: 3cm; font-size: 110%; font-weight:bold">
                                        <span t-field="l.quantity" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td style="width: 7cm; font-size: 100%; font-weight:bold">
                                        <span t-field="l.product_id.default_code"/>
                                    </td>
                                    <td style="width: 7cm; font-size: 110%; font-weight:bold">
                                        <span t-esc="producto(l.name)[0:27]"/>
                                    </td>
                                    <td style="width: 0.2cm; font-size: 110%; font-weight:bold">

                                       </td>

                                    <!-- columna precio unitario en tabla    -->
                                    <td style="width: 2cm; font-size: 110%; font-weight:bold; text-align: right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td style="width: 0.6cm; font-size: 110%; font-weight:bold">

                                    </td>
                                    <!-- Columna ventas afectivas -->
                                    <td style="width: 2cm; font-size: 110%; font-weight:bold" class="text-right">
                                        <span t-esc="l.price_total" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                      </div>

                          <!-- SUMAS -->
                          <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 22cm; left: 22cm; width: 20cm; font-weight:bold">
                              <span t-esc="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                          </div>

                          <!-- A LETRAS EL TOTAL -->
                        <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 23cm; left: 2.5cm; width: 20cm; font-weight:bold">
                            <span t-esc="a_letras(o.amount_total)"/>
                        </div>

                        <!-- 13% IVA-->
                        <div style="position: absolute; top: 26cm; left: 22cm; font-size: 90%; font-weight:bold">
                            <span t-esc="impuesto_impresos(o)['iva_13']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </div>

                        <!-- SUBTOTAL-->
                        <div style="position: absolute; top: 26.5cm; left: 22cm; font-size: 90%; font-weight:bold">
                            <span t-esc="o.amount_untaxed_signed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </div>

                        <!-- IVA RETENIDO-->
                        <div style="position: absolute; top: 27cm; left: 22cm; font-size: 90%; font-weight:bold">
                            <span t-esc="impuesto_impresos(o)['iva_retenido_ventas']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </div>

                        <!-- VTA TOTAL -->
                        <div style="position: absolute; top: 27.5cm; left: 22cm; font-size: 90%; font-weight:bold">
                            <span t-esc="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </div>


                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
