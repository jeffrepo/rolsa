<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_payment3">
      <t t-call="web.html_container">
          <t t-set="data_report_margin_top" t-value="1"/>
          <t t-set="data_report_header_spacing" t-value="1"/>
          <t t-set="data_report_dpi" t-value="110"/>

          <t t-foreach="docs" t-as="o">
              <div class="article">
                  <div class="page">
    
                      <div style="font-size: 100%; position: absolute; top: 2cm; left: 11.7cm">
                          MANAGUA,
                      </div>
                      <div style="font-size: 100%; position: absolute; top: 2cm; left: 14.7cm">
                          <span t-esc="o.date.day"/>
                      </div>
                      <div style="font-size: 100%; position: absolute; top: 2cm; left: 16.7cm">
                          <span t-esc="o.date.month"/>
                      </div>
                      <div style="font-size: 100%; position: absolute; top: 2cm; left: 18.7cm">
                          <span t-esc="o.date.year"/>
                      </div>
                      
                      
                      <div style="font-size: 100%; position: absolute; top: 3cm; left: 16cm">
                          <span t-esc="'{0:,.2f}'.format(o.amount)"/>
                      </div>
    
                      <div style="font-size: 100%; position: absolute; top: 3cm; left: 2.1cm; width: 19cm">
                          <span t-esc="o.nombre_impreso or o.partner_id.name"/>
                      </div>
                      <div style="font-size: 100%; text-transform: uppercase; position: absolute; top: 4cm; left: 2.1cm; width: 20cm">
                          <span t-esc="a_letras(o.amount)"/>
                      </div>
                      <div t-if="o.no_negociable == True" style="font-size: 100%; position: absolute; top: 7.5cm; left: 14cm">
                          <span>NO  NEGOCIABLE</span>
                      </div>
    
                  </div>
              </div>
          </t>
      </t>

    </template>
</odoo>
