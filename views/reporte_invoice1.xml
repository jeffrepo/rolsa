<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_invoice1">
       <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="page" style="font-size: 85%">

                      <!-- Pedido no. -->
                      <div style="position: absolute; top: 3.9cm; left: 1cm; font-size: 110%; font-weight:bold; width: 2cm">
                        <span style="font-family: monospace!important" t-field="o.invoice_origin"/>
                      </div>

                      <!-- vendedor. -->
                      <div style="position: absolute; top: 3.9cm; left: 3.7cm; font-size: 110%; font-weight:bold; width: 3cm">
                        <span style="font-family: monospace!important" t-field="o.invoice_user_id.name"/>
                      </div>

                      <!-- facturado -->

                      <!-- condiciones de pago -->

                      <div style="position: absolute; top: 3.9cm; left: 10.5cm; font-size: 110%; font-weight:bold; width: 3cm">
                        <t t-if="o.invoice_payment_term_id">
                            <span style="font-family: monospace!important" t-field="o.invoice_payment_term_id.name"/>
                        </t>
                      </div>

                      <!-- codigo cliente -->
                      <div style="position: absolute; top: 3.9cm; left: 15cm; font-size: 110%; font-weight:bold; width: 2cm">
                        <span style="font-family: monospace!important" t-field="o.partner_id.ref"/>
                      </div>

                        <!-- fecha -->
                        <div style="position: absolute; top: 3.9cm; left: 20cm; font-size: 100%; font-weight:bold">
                            <span t-field="o.invoice_date"/>
                        </div>

                        <!-- nombre cliente -->
                        <div style="position: absolute; top: 5.1cm; left: 2.5cm; font-size: 90%; font-weight:bold; width: 14cm">
                          <span style="font-family: monospace!important" t-field="o.partner_id.name"/>
                        </div>
                        <!-- direccion -->
                        <div style="position: absolute; top: 5.6cm; left: 2.9cm; font-size: 80%; font-weight:bold: width: 14cm"><b>
                            <span t-esc="o.partner_id.street"/>  <span t-esc="o.partner_id.street2"/></b>
                        </div>

                        <!-- nit cliente -->
                        <div style="position: absolute; top: 5.1cm; left: 18cm; font-size: 90%; font-weight:bold">
                            <span t-field="o.partner_id.vat"/>
                        </div>
                        <!-- registro no -->
                        <div style="position: absolute; top: 5.6cm; left: 19.5cm; font-size: 80%; font-weight:bold">
                            <span t-esc="o.partner_id.dui"/>
                        </div>

                        <!-- giro -->
                        <div style="position: absolute; top: 6.1cm; left: 18cm; font-size: 80%; font-weight:bold; width: 6cm">
                            <t t-if="o.partner_id.giro_negocio_id">
                                <span t-esc="o.partner_id.giro_negocio_id.name"/>
                            </t>
                        </div>
                        <t t-set="total_ventas_no_sujetas" t-value="0"/>
                        <t t-set="total_ventas_exentas" t-value="0"/>
                        <t t-set="total_ventas_gravadas" t-value="0"/>
                        <t t-set="impuesto_iva" t-value="impuestos(o)['iva_por_pagar_sv']"/>
                        <t t-set="impuesto_cesc" t-value="impuestos(o)['cesc_sv_5']"/>
                        <t t-set="retencion_iva" t-value="impuestos(o)['retencion_iva']"/>
                        <t t-set="impuesto_isv_13" t-value="impuestos(o)['isv_13']"/>
                        
                        <div style="position: absolute; top: 7.9cm; left: 1cm">
                        <table>
                            <tbody>
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td style="width: 1.6cm; font-size: 80%; font-weight:bold">
                                        <span t-field="l.quantity"/>
                                    </td>
                                    <td style="width: 1.9cm; font-size: 80%; font-weight:bold">
                                        <span t-field="l.product_id.default_code"/>
                                    </td>
                                    <td style="width: 12cm; font-size: 80%; font-weight:bold">
                                        <span t-esc="producto(l.name)"/>
                                    </td>
                                    <td style="width: 0.2m; font-size: 80%; font-weight:bold">
                                    </td>
                                 </tr>
                            </tbody>
                        </table>
                      </div>
                      <div style="position: absolute; top: 7.9cm; left: 16.5cm">
                        <table>
                            <tbody>
                                  <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <!-- precio unitario sin umpuesto-->
                                    <td style="width: 1.9cm; font-size: 80%; font-weight:bold" class="text-right">
                                        <span t-esc="l.price_subtotal / l.quantity" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td style="width: 1.9cm">
                                    </td>
                                    <td style="width: 1.9cm">
                                    </td>
                                    <!-- ventas gravadas -->
                                    <td style="width: 2cm; font-size: 80%; font-weight:bold" class="text-right">
                                        <span t-esc="l.price_subtotal" t-options="{'widget': 'float', 'precision': 2}"/>
                                        <t t-set="total_ventas_gravadas" t-value="total_ventas_gravadas+l.price_subtotal"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                      </div>

                        <!-- A LETRAS EL TOTAL -->
                        <P><div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 19.3cm; left: 2cm; font-weight:bold; width: 14cm">
                            <span t-esc="a_letras_dolares(o.amount_total)"/>
                        </div></P>

                        <!-- Sumas -->
                        <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 19.3cm; left: 22.5cm; font-weight:bold; width: 1.9cm" class="text-right">
                            <span t-esc="o.amount_untaxed_signed" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                        <!-- IVA 13% o IVA12% -->
                        <div style="position: absolute; top: 19.7cm; left: 22.5cm; font-size: 90%; font-weight:bold; width: 1.9cm" class="text-right">
                            <span t-esc="impuesto_iva" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                        <!-- Subtotal -->
                        <div style="position: absolute; top: 20.2cm; left: 22.5cm; font-size: 90%; font-weight:bold; width: 1.9cm" class="text-right">
                            <span t-esc="o.amount_untaxed_signed+impuesto_iva+impuesto_isv_13" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                        <!-- Iva retenido -->
                        <div style="position: absolute; top: 20.7cm; left: 22.5cm; font-size: 90%; font-weight:bold; width: 1.9cm" class="text-right">
                            <span t-esc="retencion_iva" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>


                        <!-- VTAS. EXENTAS -->
                        <!-- <div style="position: absolute; top: 22cm; left: 22.5cm; font-size: 90%; font-weight:bold; width: 1.9cm" class="text-right">
                            <span t-esc="impuesto_cesc" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div> -->

                        <!-- VTAS. TOTALES -->
                        <div style="position: absolute; top: 22.5cm; left: 22.5cm; font-size: 90%; font-weight:bold; width: 1.9cm" class="text-right">
                            <span t-esc="(o.amount_untaxed_signed+impuesto_iva+impuesto_isv_13)+retencion_iva" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>

                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
