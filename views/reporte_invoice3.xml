<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_invoice3">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="page" style="font-size: 85%">

                      <!-- Pedido no. -->
                      <div style="position: absolute; top: 3.8cm; left: 2cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <span style="font-family: monospace!important" t-field="o.invoice_origin"/>
                      </div>

                      <!-- vendedor. -->
                      <div style="position: absolute; top: 3.8cm; left: 4cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <span style="font-family: monospace!important" t-field="o.invoice_user_id.name"/>
                      </div>

                      <!-- facturado -->

                      <!-- condiciones de pago -->
                      <div style="position: absolute; top: 3.8cm; left: 10cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <t t-if="o.invoice_payment_term_id">
                            <span style="font-family: monospace!important" t-field="o.invoice_payment_term_id.name"/>
                        </t>
                      </div>

                      <!-- codigo cliente -->
                      <div style="position: absolute; top: 3.8cm; left: 14cm; font-size: 110%; font-weight:bold; width: 8cm">
                        <span style="font-family: monospace!important" t-field="o.partner_id.ref"/>
                      </div>

                        <!-- fecha -->
                        <div style="position: absolute; top: 3.9cm; left: 16.6cm; font-size: 110%; font-weight:bold">
                            <span t-field="o.invoice_date"/>
                        </div>

                        <!-- nombre cliente -->
                        <div style="position: absolute; top: 4.8cm; left: 5cm; font-size: 110%; font-weight:bold; width: 8cm">
                          <span style="font-family: monospace!important" t-field="o.partner_id.name"/>
                        </div>


                        <!-- REGISTRO -->
                        <div style="position: absolute; top: 4.8cm; left: 15cm; font-size: 110%; font-weight:bold; width: 8cm">
                          <!-- <span style="font-family: monospace!important" t-field="o.partner_id.name"/> -->
                        </div>



                        <!-- direccion -->
                        <div style="position: absolute; top: 5.8cm; left: 5cm; font-size: 80%; width: 8cm; font-weight:bold">
                            <span t-esc="o.partner_id.street"/>  <span t-esc="o.partner_id.street2"/>
                        </div>

                        <!-- nit cliente -->
                        <div style="position: absolute; top: 5.8cm; left: 15cm; font-size: 110%; font-weight:bold">
                            <span t-field="o.partner_id.vat"/>
                        </div>


                        <!-- DEPTO  -->
                        <div style="position: absolute; top:6.8cm; left: 5cm; font-size: 110%; font-weight:bold">
                            <t t-if="o.partner_id.state_id">
                              <span t-field="o.partner_id.state_id.name"/>
                            </t>
                        </div>


                        <!-- registro no -->
                        <div style="position: absolute; top:4.8cm; left: 15cm; font-size: 110%; font-weight:bold">
                            <span t-field="o.partner_id.dui"/>
                        </div>


                        <div style="position: absolute; top: 9.5cm; left: 2cm">
                            <table>
                                <tbody>
                                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                                        <!-- columna cantidad -->
                                        <td style="width: 2cm; font-size: 100%; font-weight:bold">
                                            <span t-field="l.quantity" t-options="{'widget': 'float', 'precision': 0}"/>
                                        </td>
                                        <!-- columna codigo -->
                                        <td style="width: 6cm; font-size: 100%; font-weight:bold">
                                        <span t-field="l.product_id.default_code"/>
                                        </td>
                                        <!-- columna descripcion -->
                                        <td style="width: 6.2cm; font-size: 110%; font-weight:bold">
                                        <span t-esc="producto(l.name)[0:24]"/>
                                       </td>
                                        <td style="width: 1.5cm; font-size: 110%">

                                       </td>
                                       <!-- columna precio unitario -->
                                        <td style="width: 2cm; font-size: 100%;text-align: right; font-weight:bold">
                                            <span t-esc="l.price_unit" t-options="{'widget': 'float', 'precision': 4}"/>
                                        </td>
                                        <td style="width: 3.2cm; font-size: 110%">

                                       </td>
                                        <!-- columna ventas afectas -->
                                        <td style="width: 2cm; font-size: 100%; font-weight:bold" class="text-right">
                                            <span t-esc="l.price_total" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>



                        <!-- A LETRAS EL TOTAL -->
                        <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 14.5cm; left: 2.5cm; width: 20cm; font-weight:bold">
                            <span t-esc="a_letras(o.amount_total)"/>
                        </div>

                        <!-- TOTAL -->
                        <div style="position: absolute; top: 14.5cm; left: 15cm; font-size: 90%; font-weight:bold">
                            <span t-esc="o.amount_total" t-options="{'widget': 'float', 'precision': 2}"/>
                        </div>


                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
